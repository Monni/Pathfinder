<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hyy.pathfinder.MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="From"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_marginEnd="279dp" />

        <Switch
            android:text="Use my location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gpsSwitch"
            android:checked="false" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etOrigin"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:id="@+id/textView2" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etDestination"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startMap"
            android:text="Fire up map"
            android:id="@+id/btnMap"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:onClick="testJSON"
            android:id="@+id/btnJSON"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtJSON"
            android:layout_gravity="center_horizontal" />



        //miikalta
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/locStartDate"
            android:layout_below="@+id/locStart"
            android:layout_alignParentStart="true"
            android:hint="Lähtöpäivä dd.mm.yyyy"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/locStartTime"
            android:layout_below="@+id/locStartDate"
            android:layout_alignRight="@id/locStartDate"
            android:hint="Lähtöaika hh:mm"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heti"
            android:id="@+id/locStartImmediately"
            android:layout_below="@id/locStart"
            android:layout_alignTop="@+id/locStartDate"
            android:layout_toEndOf="@+id/locStartDate"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hae reitti"
            android:onClick="test"
            android:id="@+id/btnTest"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
